# See COPYING for license details.

pkgname=blackarch-devtools
pkgver=0.1.2
pkgrel=1
pkgdesc='Development framework for the BlackArch Linux distribution written in Rust.'
arch=('x86_64')
url='https://github.com/Edu4rdSHL/blackarch-devtools'
license=('GPL3')
depends=('devtools' 'curl')
makedepends=('rust')
source=("https://github.com/Edu4rdSHL/$pkgname/archive/$pkgver.tar.gz")
sha512sums=('5acf12707fd963df6705611ce047b78b1e410272a378df72c1b301b9c17a6c6f1932389b5d193acf0c44925928e13fcf2fd4d65774cfa9e039d27c4241b2d541')

build() {
  cd "${pkgname}-${pkgver}"
  cargo build --release
}

package() {
  cd "${pkgname}-${pkgver}"

  install -Dm 755 "target/release/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
